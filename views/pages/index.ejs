<% layout('layout/main') %>

<%- include('../partials/hero') %>

<!-- Frases Recentes Section -->
<section class="quotes-section">
  <div class="container">
    <h2 class="section-title">Frases Recentes</h2>
    <% if (quotes && quotes.length > 0) { %>
      <div class="quotes-list">
        <% quotes.forEach(quote => { %>
          <%- include('../partials/_quote_card', { quote: quote }) %>
        <% }) %>
      </div>
    <% } else { %>
      <p class="no-quotes">Nenhuma frase cadastrada ainda.</p>
    <% } %>
  </div>
</section>
